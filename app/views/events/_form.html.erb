<div class="container">
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: "col-2 col-form-label text-info" %>
    <div class="col-10">
      <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-2 col-form-label text-info" %>
    <div class="col-10">
      <%= form.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Description of article" %>
    </div>
  </div> 

  <div class="form-group row justify-content-center">
    <%= form.label :start, class: "col-2 col-form-label text-info" %>
    <div class="col-10">
    <%= form.datetime_select :start %>
    </div>
  </div>
      
  <div class="form-group row justify-content-center">
    <%= form.label :end, class: "col-2 col-form-label text-info" %>
    <div class="col-10">
    <%= form.datetime_select :end %>
    </div>
  </div>

  <div class="form-group row">
  <%= form.label :address, class: "col-2 col-form-label text-info" %>
  <div class="col-10">
    <%= form.text_area :address, rows:3, class: "form-control shadow rounded", placeholder: "Address" %>
  </div>
  </div> 

  <div class="form-group row justify-content-center">
    <%= form.submit class: "btn btn-outline-info btn-lg" %>
  </div>


<% end %>

</div>


